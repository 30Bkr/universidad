---
import Layout from '../../layouts/Layout.astro';
---
<Layout>
  <div id="contenedor_incio">
    <h1>Inicio de Sesión</h1>
    <form action="" class="form">
      <label for="">
       <input type="email" placeholder="Correo Eléctronico">
      </label>
      <label for="">
        <input type="password" placeholder="Contraseña">
       </label>
       <button>Iniciar sesión</button>
    </form>
    <a class="volver" href="/inicio">⬅️Atrás</a>
    <div class="final">
      <p>Contactar</p>
    </div>
  </div>
</Layout>
<style>
#contenedor_incio{
  width: 340px;
  height: 360px;
  background: rgb(227, 221, 221);
  display: flex;
  flex-direction: column;
  align-items: center;
  /* justify-content: center; */
  border-radius: 8px;
  position: relative;
}
h1{
  width: 100%;
  background: rgb(204, 204, 204);
  border-radius: 8px;
  margin: 0;
  height:64px;
  margin-bottom: 42px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.form{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 280px;
}
.form input{
  box-sizing: border-box;
  border-radius: 8px;
  height: 46px;
  width: 280px; 
  padding: 4px;
  padding-left: 16px;
  margin-bottom: 16px;
  border: none;
  font-size: medium;
}
button{
  width: 220px;
  height: 42px;
  border: none;
  border-radius: 8px;
  background-color: rgb(0, 161, 0);
  color:white;
  cursor: pointer;
  font-size: medium;
  margin-top: 16px;
}
.final{
  position: absolute;
  bottom: 0px;
}
.volver{
  box-sizing: border-box;
  width: 64px;
  height: 32px;
  border-radius: 8px;
  border: none;
  position: absolute;
  bottom: 32px;
  right: 16px;
  color: black;
}
</style>