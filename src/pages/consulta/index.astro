---
import Layout from '../../layouts/Layout.astro';
---
<Layout>
  <div id="contenedor_incio">
    <h1>Consulta</h1>
    <div id="validador">
      <h2>Información de la consulta </h2>
    </div>
    <form action="">
      <label for="">
        <input type="text" placeholder="Número de registro">
      </label>
      <button>Consultar</button>
    </form>
    <a class="volver" href="/inicio">⬅️Atrás</a>
    <div class="final">
      <p>Contactar</p>
    </div>
  </div>
</Layout>
<style>
#contenedor_incio{
  width: 340px;
  height: 90vh;
  background: rgb(227, 221, 221);
  display: flex;
  flex-direction: column;
  align-items: center;
  /* justify-content: center; */
  border-radius: 8px;
  position: relative;
  box-shadow: 0px 0px 8px 2px gray;
}
h1{
  width: 100%;
  background: rgb(204, 204, 204);
  border-radius: 8px;
  margin: 0;
  height:64px;
  margin-bottom: 42px;
  display: flex;
  justify-content: center;
  align-items: center;
}
#validador{
  height: 45%;
  width: 280px;
  border: 1px solid white;
  margin-bottom: 32px;
}
form{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 280px;
}
form input{
  box-sizing: border-box;
  border-radius: 8px;
  height: 46px;
  width: 280px; 
  padding: 4px;
  padding-left: 16px;
  margin-bottom: 16px;
  border: none;
  font-size: medium;
}
form button{
  width: 220px;
  height: 42px;
  border: none;
  border-radius: 8px;
  background-color: rgb(0, 161, 0);
  color:rgb(255, 255, 255);
  cursor: pointer;
  font-size: medium;
  margin-top: 16px;
}
form button:hover{
  background-color: rgb(0, 142, 7);
  box-shadow: 0px 0px 4px 4px white;
}
.final{
  position: absolute;
  width: 100%;
  bottom: 0px;
  left: 40%;
}
.volver{
  box-sizing: border-box;
  width: 64px;
  height: 32px;
  border-radius: 8px;
  border: none;
  position: absolute;
  bottom: 32px;
  right: 16px;
  color: black;
}
</style>